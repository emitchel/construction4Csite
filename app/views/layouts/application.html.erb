<div id="preloader"></div>
<!--top bar-->
<div class="top-bar">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <span class="readable-small-text"><i class="ion-android-call"></i><a href="tel:<%= Constants::PHONE_NUMBER_ANCHOR %>" ><%= Constants::PHONE_NUMBER %></a></span>
