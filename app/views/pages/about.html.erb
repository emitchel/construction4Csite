    <div class="col-sm-4">
      <h4><i class="ion-ios-telephone"></i> <%= Constants::PHONE_NUMBER %></h4>
    </div>
    <div class="col-sm-4">
      <h4><i class="ion-email"></i> <%= Constants::EMAIL %></h4>
    </div>
    <div class="col-sm-4">
      <h4><i class="ion-map"></i> <%= Constants::ADDRESS %></h4>
    </div>
  </div>
</div>
